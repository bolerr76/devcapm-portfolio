<h1>Portfolio Items</h1>

<% @portfolio_items.each do |portfolio_item| %>
	<p><%= portfolio_item.title %></p>
	<p><%= portfolio_item.thumb_image %></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %> <!--prikazi ovu sliku ako nema druge -->
	<!--image_tag postavi se da prikaze sliku -->

<% end %>